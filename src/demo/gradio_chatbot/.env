# Gradio Chatbot Configuration
# Copy this file to .env and fill in your values

# OpenAI Configuration
OPENAI_API_KEY=sk-123
# OPENAI_BASE_URL=http://localhost:8000/v1  # Optional: for local LLM

# LLM Configuration
LLM_MODEL=gpt-4-turbo
EMBEDDING_MODEL=bge-m3

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
COLLECTION_NAME=fetchcraft_chatbot

# Documents Configuration
DOCUMENTS_PATH=/mnt/storage/data/knowledge/testfiles_tiny

# Hybrid Search Configuration
ENABLE_HYBRID=true
FUSION_METHOD=rrf

# Chunking Configuration
CHUNK_SIZE=8192
CHUNK_OVERLAP=200
USE_HIERARCHICAL_CHUNKING=true

# Web Server Configuration (optional)
# GRADIO_SERVER_NAME=0.0.0.0
# GRADIO_SERVER_PORT=7860
