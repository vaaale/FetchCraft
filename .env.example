# ------------------------------------------
#   General
# ------------------------------------------
INGESTION_ROOT=./docs
DOCUMENTS_PATH=/app/Documents
PORT=8001
HOST=0.0.0.0

# ------------------------------------------
#   GPU
# ------------------------------------------
CUDA_DEVICE_ORDER=PCI_BUS_ID
CUDA_VISIBLE_DEVICES=1
NVIDIA_VISIBLE_DEVICES=1

# ------------------------------------------
#   Vector Index
# ------------------------------------------
INDEX_ID=docs-index
CHUNK_SIZE=4096
CHILD_CHUNKS=1024,512
CHUNK_OVERLAP=200

MONGO_URI=mongodb://mongodb:27017/fetchcraft
POSTGRES_URL=postgresql://postgres:password@pgvector:5432/ingestion
COLLECTION_NAME=fetchcraft_chatbot
#POSTGRES_URL=postgresql://postgres:password@pgvector:5432/sexfiles
#COLLECTION_NAME=fetchcraft_sexfiles


# ------------------------------------------
# Worker configuration
# ------------------------------------------
# Fetchcraft Admin Ingestion
# Number of concurrent workers for processing documents
# ------------------------------------------
POOL_MIN_SIZE=10
POOL_MAX_SIZE=20
NUM_WORKERS=12

# ------------------------------------------
#   Callback Base URL
# ------------------------------------------
# Callback base URL for async parsing
# This should be the externally accessible URL of this admin server
# ------------------------------------------
DOCLING_SERVER=http://docling-server:8001
CALLBACK_BASE_URL=http://fetchcraft-admin:8001


# ------------------------------------------
#   MCP Server
# ------------------------------------------
FRONTEND_BASE_URL=http://fetchcraft-admin:8001

# ------------------------------------------
#   LLM - OpenAI
# ------------------------------------------
OPENAI_API_KEY=sk-123
OPENAI_BASE_URL=http://localhost:8000/v1
LLM_MODEL=gpt-4-turbo

# ------------------------------------------
#   Embeddings
# ------------------------------------------
EMBEDDING_MODEL=bge-m3
EMBEDDING_API_KEY=sk-123
EMBEDDING_BASE_URL=http://localhost:8000/v1

# ------------------------------------------
# PostgreSQL
# ------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=fetchcraft

# ------------------------------------------
#   Qdrant Vector Store
# ------------------------------------------
QDRANT_HOST=fetchcraft-qdrant
QDRANT_PORT=6333
ENABLE_HYBRID=true
FUSION_METHOD=rrf

# ------------------------------------------
#   Huggingface
# ------------------------------------------
HF_HOME=$HOME/.cache/huggingface

# ------------------------------------------
#   Librechat
# ------------------------------------------
UID=
GID=
MEILI_MASTER_KEY=masterkey

