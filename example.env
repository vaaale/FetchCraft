# ------------------------------------------
#   General
# ------------------------------------------
DOCUMENTS_PATH=./docs
HOST=0.0.0.0
PORT=8001
OUTPUT_HTML=True
DOCLING_SERVER=http://docling-server:8001
MONGO_URI=mongodb://mongodb:27017/
POSTGRES_URL=postgresql://postgres:password@pgvector:5432/fetchcraft
# Async parsing configuration
USE_ASYNC_PARSING=true
ADMIN_CALLBACK_URL=http://localhost:8080/api/callbacks/parsing
# Worker configuration
# Number of concurrent workers for processing documents
NUM_WORKERS=4


# ------------------------------------------
#   Embeddings
# ------------------------------------------
EMBEDDING_MODEL=bge-m3
OPENAI_API_KEY=sk-123
OPENAI_BASE_URL=http://my-openai:8000/v1

# ------------------------------------------
#   LLM - OpenAI
# ------------------------------------------
OPENAI_API_KEY=sk-123
OPENAI_BASE_URL=http://my-openai:8000/v1
LLM_MODEL=gpt-4-turbo

# ------------------------------------------
#   Qdrant Vector Store
# ------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
COLLECTION_NAME=fetchcraft_chatbot
ENABLE_HYBRID=true
FUSION_METHOD=rrf

# ------------------------------------------
#   Vector Index
# ------------------------------------------
INDEX_ID=docs-index
CHUNK_SIZE=8192
CHILD_CHUNKS="4096,1024"
CHUNK_OVERLAP=200